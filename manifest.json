{
  "manifest_version": 3,
  "name": "TabPause",
  "description": "Automatically pauses video when switching tabs and resumes it when returning.",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon16.png",
      "48": "/icon48.png",
      "128": "/icon128.png"
    }
  },
  "icons": {
    "16": "/icon16.png",
    "48": "/icon48.png",
    "128": "/icon128.png"
  }
}